<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Screen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/logIn_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Log in"
            android:textColor="@color/black"
            android:textSize="25dp" />


        <EditText
            android:id="@+id/login_email_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logIn_txt"
            android:hint="Email"
            android:textSize="15dp" />


        <EditText
            android:id="@+id/login_password_edt"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/login_email_edt"
            android:hint="Password"
            android:textSize="15dp"

            />

        <Button
            android:id="@+id/login_sign_in_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_password_edt"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="sign in " />

        <TextView
            android:id="@+id/creat_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_sign_in_btn"
            android:gravity="center"
            android:text="creat account"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <Button
            android:id="@+id/google_login_sign_in_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/creat_txt"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="google" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/google_login_sign_in_btn"
            />

    </RelativeLayout>
</RelativeLayout>